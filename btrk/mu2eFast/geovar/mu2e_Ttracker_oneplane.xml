<?xml version="1.0" encoding="UTF-8" ?>
<edml>
    <included>
        <define>
            <constant name="strawthickness" value="0.3942"></constant>
            <constant name="wirethickness" value="0.001963"></constant>
            <constant name="usize" value="126.2261"></constant>
            <constant name="vsize" value="30.0"></constant>
            <constant name="centerrho" value="53.0"></constant>
            <constant name="wiregap" value="0.995050"></constant>
            <constant name="gasgap" value="0.009901"></constant>

            <variable name="zvar" type="int"></variable>
            <variable name="cvar" type="int"></variable>
            <variable name="svar" type="int"></variable>
            
            <formula name="planestraw" par0="zvar" par1="svar" formula="-144.5+[0]*17.0-2.95+[1]*1.6"></formula>
            <formula name="planegas" par0="zvar" par1="svar" formula="-144.5+[0]*17.0-2.70+[1]*1.6"></formula>
            <formula name="planewire" par0="zvar" par1="svar" formula="-144.5+[0]*17.0-2.45+[1]*1.6"></formula>
            

            <formula name="zring1" par0="zvar" formula="-144.5+[0]*17.0-1"></formula>
            <formula name="zring2" par0="zvar" formula="-144.5+[0]*17.0+1"></formula>

            <formula name="cenphi" par0="zvar" par1="cvar" par2="svar" formula="(50*[2]^3-225*[2]^2+235*[2]+30)*0.017453 +[1]*2.094395"></formula>

            <formula name="aphi" par0="zvar" par1="cvar" par2="svar" formula="(50*[2]^3-225*[2]^2+235*[2]+300)*0.017453+[1]*2.094395"></formula>

            <formula name="index" par0="zvar" par1="cvar" par2="svar" formula="100*[0]+10*[1]+[2]"></formula>

        </define>

        <measures>
            <device name="MWPC1"
                type="DriftChamber"
                sensitiveTimeWindow="0.5e-6"
                rms_par0="0.01"
                rms_par1="0"
                rms_par2="0"
                rms_par3="0"
                rms_par4="0"
                rms_par5="0"
                eff_par0="0.99"
                eff_par1="1.00"	
                cell_size="1.8"
                trunc_frac="0.8"
                dedx_par1="0.0013202"
                dedx_par2="1"
                dedx_par3="-0.5"
                angle="1.57079633"  />
        </measures>
        
        <detector name="Mu2e">
            <volume name="Tracker">
                <loop variable="zvar" count="18" startvalue="1" stepvalue="1">
                    <ring name="C1" id="zvar" z="zring1" lowradius="70" hiradius="80" thick="0.5" mat="CFiber" />
                    <ring name="C2" id="zvar" z="zring2" lowradius="70" hiradius="80" thick="0.5" mat="CFiber" />
                    <loop variable="svar" count="4" startvalue="0" stepvalue="1">
                        <loop variable="cvar" count="3" startvalue="0" stepvalue="1">
                            <rect name="straw" id="index" orientation="0" centerrho="centerrho" centerz="planestraw" centerphi="cenphi" axisphi="aphi" usize="usize" vsize="vsize" thick="strawthickness" mat="straw_25um" meas="MWPC1" gap="gasgap"/>
                            <rect name="wire" id="index" orientation="0" centerrho="centerrho" centerz="planewire" centerphi="cenphi" axisphi="aphi" usize="usize" vsize="vsize" thick="wirethickness" mat="straw-wire" gap="wiregap" />
                        </loop>
                    </loop>
                </loop>
            </volume>
        </detector>
<!-- now define the voxelization -->
        <config>
            <sect name="Tracker">
                <param name="rbounds"    type="vector"        >
                    37 53 69 85 101
                </param>
                <param name="nphivoxels"    type="vector"         >
                    6 6 6 6
                </param>
                <param name="zbounds"   type="vector"         >
                     -140 -123 -106 -89 -72 -55 -38 -21 -4 13 30 47 64 81 98 115 132 149 166 200 
                </param>
            </sect>
        </config>
    </included>
</edml>
