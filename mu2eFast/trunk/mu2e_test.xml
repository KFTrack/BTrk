<?xml version="1.0" encoding="utf-8" ?>
 
<edml>
    
  <config>

    <!-- input specification, uncomment if you want to read a file 
    <sect name="RootFile">
        <param name="inputfile" type="string">file.root</param>
        <param name="firstevent" type="long"> 0</param>
        <param name="nevents" type="long"> -1</param>
        <param name="timescale" type="float"> 1e-9 </param>
        <param name="timeoffset" type="float"> 0 </param>
    </sect> -->
    <!-- simple generator parameters -->
    <sect name="SG">
        <!-- Number of tracks to generate -->
        <param name="nevents" type="long"> 10000</param>
        <!-- Initial distance from z axis (phi symmetric) -->
        <param name="r0_mean" type="double"> 0.0</param>
        <param name="r0_sigma" type="double"> 4.0</param>
        <!-- Initial distance from z=0 -->
        <param name="z0_mean" type="double"> -430</param>
        <param name="z0_sigma" type="double"> 23</param>
        <!-- momentum range-->
        <param name="p_min"  type="double"> 0.1051</param>
        <param name="p_max" type="double"> 0.1051 </param>
        <!-- polar angle range -->
        <param name="cost_min"  type="double"> 0.5 </param>
        <param name="cost_max" type="double"> 0.707107 </param>
        <!-- negative electron -->
        <param name="PdtPdg" type="long"> 11</param>
        <param name="rndseed" type="long"> 123499821</param>
    </sect>    
    
    <!-- ROOT file to save results to -->
    <param name="outputfile" type="string"> mu2e_test.root</param>    
    <param name="hittuple" type="bool"> true </param>
    <param name="trajdiff" type="bool"> false </param>
    
    <!-- traj diff test parameters -->
    <param name="fieldmap" type="string"> mu2eFast/DSMap_unfmt_rad100.dat</param>
    <param name="distortionfactor" type="double"> 10.0 </param>
    
    <!-- display parameters -->
    <param name="displaytrack" type="bool"> false</param>
    <param name="displayfile" type="string" > mu2e_display.root</param>
    <param name="displayresolution" type="int" > 2000</param>

    <!-- Print event number for every printfreq -->
    <param name="printfreq" type="long"> 1000</param>

    <!-- Prints out Positon/Momentum/Parameter Info (make sure numtracks isn't large!!) -->
    <param name="verbose" type="bool"> false</param>


  </config>
</edml>
